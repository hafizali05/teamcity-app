{
  "name": "Chrome Extension Webpack",
  "permissions": [
    "https://*/*",
    "<all_urls>",
    "storage",
    "notifications",
    "contextMenus"
  ],
  "web_accessible_resources": [
    "icon-48.png"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon-128.png"
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
